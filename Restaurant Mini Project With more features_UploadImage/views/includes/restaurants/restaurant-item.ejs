<li class="restaurant-item">
    <article>
        <h2>
            <%= restaurant.name %>
        </h2>
        <div class="restaurant-meta">
            <p>
                <%= restaurant.cuisine %>
            </p>
            <p>
                <%= restaurant.address %>
            </p>
        </div>
        <p>
            <%= restaurant.description %>
        </p>
        <div class="restaurant-actions">
            <a href="/restaurants/<%= restaurant.rId %>">
                View Restaurant
            </a>

             <a href="/restaurants/<%= restaurant.rId %>/edit" id="edit-btn">
                Edit
            </a>
            
            <a href="/restaurants/<%= restaurant.rId %>/delete" id="delete-btn" onclick="return confirm('Are you sure you want to delete this restaurant?')">
                Delete
            </a>
        </div>
    </article>
    <div class="restaurant-image">
        <% if (!restaurant.imageUrl) { %>
            <img src="/images/default.png" alt="default" />
        <% } else { %>
            <img src="<%= restaurant.imageUrl %>" alt="<%= restaurant.name %>" />
        <% } %>
        
    </div>
</li>