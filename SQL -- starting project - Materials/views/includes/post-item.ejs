<article class="post-item">
  <h2><%= post.title%></h2>
  <p class="post-item-author"><%= post.author_name%></p>
  <p><%= post.summary %></p>
  <div class="post-actions">
    <button class="delet-btn" data-btn-id="<%= post.post_id %>">Delete Post</button>
    <a href="/posts/<%= post.post_id%>/edit">Edit Post</a>
    <a class="btn" href="/posts/<%= post.post_id %>">View Post</a>
  </div>
</article>