<%- include('../../shared/includes/head', { pageTitle: 'Your Cart' }) %>
<link rel="stylesheet" href="/styles/cart.css">
<script src="/scripts/cart-item-managment.js" defer></script>
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Your Cart</h1>
    <ul id="cart-items">
      <% for (const cartItem of locals.cart.items) { %>
        <li>
          <%- include('includes/cart-item', { item: cartItem }) %>
        </li>
      <% } %>
    </ul>
    <p>Total: $<span id="cart-total-price"><%= locals.cart.totalPrice.toFixed(2) %></span></p>
    <% if(locals.isAuth){%>
      <form id="cart-total" action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
        <button class="btn" type="submit">Buy Products</button>
        <!--<input type="submit" value="Buy Products">-->
      </form>
    <% }else{ %>
      <p id="cart-total-fallback">Log in to proceed by placing the order</p>
    <% } %>
  </main>
<%- include('../../shared/includes/footer') %>